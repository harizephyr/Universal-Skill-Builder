{
  "mcpServers": {
    "educational-content": {
      "command": "uvx",
      "args": ["educational-content-mcp@latest"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": ["validate_content", "check_accessibility"]
    },
    "translation-service": {
      "command": "uvx", 
      "args": ["translation-mcp-server@latest"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": ["translate_text", "detect_language"]
    },
    "code-analysis": {
      "command": "uvx",
      "args": ["code-quality-mcp@latest"], 
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": ["analyze_performance", "check_security"]
    }
  }
}